@model AddProfessionViewModel 

@{
// ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("AddProfession", "Admin", FormMethod.Post))
{
    @Html.ValidationSummary(true, "")
    @Html.AntiForgeryToken()
    @Html.DisplayFor(m => m.Message)
    <div>
        @Html.DropDownListFor(m => m.SelectedValue, Model.Companies)
    </div>
    <div>
        <table>
            <thead>
            <th>property</th>
            <th>value</th>
            </thead>
            <tfoot></tfoot>
            <tbody>
                <tr>
                    <td>@Html.LabelFor(m => m.Title)</td>
                    <td>@Html.TextBoxFor(m => m.Title)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Description)</td>
                    <td>@Html.TextBoxFor(m => m.Description)</td>
                </tr>
            </tbody>

</table>
    </div>
    <button name="button" value="submit">Add</button>
}